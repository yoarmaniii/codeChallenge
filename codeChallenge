
public static Number (int i){
       //initialize a "for loop" to cycle through any set of number and see what are divisble by 3,5, 15
        for (int i = 1; i <= 100; i++){

        //create if else statement and include a modulus which checks to see if the remainder is zero
        if(i%3==0){
            return"word"}//if the first number is divisible by 3 and returns 0 it will return "word"

        else if(i%5==0){
            return"smith"}//if the number is divisible by 5 and returns 0 it will return "smith"

        else if(i%15==0){
            return"wordSmith"}//if the number input is divisible by 15 and returns 0 it will return
        //"wordsmith
        else {
        return (i)//if no number is divisible it will return same number
        }
        }
        }
